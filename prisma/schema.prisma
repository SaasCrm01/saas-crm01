datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  password  String?
  createdAt DateTime @default(now())
  role      Role     @default(USER)
  org       Org?     @relation(fields: [orgId], references: [id])
  orgId     Int?

  @@map("users")
}

model Org {
  id          Int      @id @default(autoincrement())
  name        String
  createdAt   DateTime @default(now())
  ownerId     Int      @unique
  owner       User     @relation(fields: [ownerId])

  @@map("orgs")
}

enum Role {
  USER
  ADMIN
  SELLER
}

model Client {
  id        Int           @id @default(autoincrement())
  name      String
  email     String
  phone     String
  createdAt DateTime      @default(now())
  sellers   ClientSeller[]
}

model Seller {
  id        Int           @id @default(autoincrement())
  name      String
  email     String
  phone     String
  createdAt DateTime      @default(now())
  clients   ClientSeller[]
}

model ClientSeller {
  clientId  Int
  sellerId  Int
  client    Client        @relation(fields: [clientId], references: [id])
  seller    Seller        @relation(fields: [sellerId], references: [id])

  @@id([clientId, sellerId])
}

model Sale {
  id     Int      @id @default(autoincrement())
  month  String
  sales  Int
}

model SellerPerformance {
  id          Int      @id @default(autoincrement())
  name        String
  performance Int
}

model ClientGrowth {
  id    Int    @id @default(autoincrement())
  name  String
  value Int
}
